<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/process"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="40dp"
        android:text="Process Picture"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_image" />

    <ImageView
        android:id="@+id/emo_filler"
        android:layout_width="369dp"
        android:layout_height="429dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/process"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/switch_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="18dp"
        android:text="Switch Image"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/process"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emo_filler" />
</android.support.constraint.ConstraintLayout>